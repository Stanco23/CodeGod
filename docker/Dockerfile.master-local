# Dockerfile for Master AI Orchestrator with Local Model Support
FROM python:3.11-slim

LABEL maintainer="Code-God Project"
LABEL description="Master AI Orchestrator with local model support and MCP integration"

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    curl \
    build-essential \
    nodejs \
    npm \
    && rm -rf /var/lib/apt/lists/*

# Install Ollama for local model execution
RUN curl -fsSL https://ollama.com/install.sh | sh

# Copy requirements
COPY requirements/master-local-requirements.txt /app/requirements.txt

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY memory_system.py /app/
COPY task_orchestration.py /app/
COPY prompt_templates.py /app/
COPY validation_system.py /app/
COPY local_model_executor.py /app/
COPY mcp_server_registry.py /app/
COPY master_orchestrator_local.py /app/

# Create necessary directories
RUN mkdir -p /app/projects /app/logs /app/config /app/chroma_db /app/mcp_servers

# Pull default model (can be overridden)
# RUN ollama pull llama3.1:70b

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV PREFER_LOCAL=true

# Expose port
EXPOSE 8001

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8001/health || exit 1

# Start Ollama service and run the master orchestrator
CMD ollama serve & sleep 5 && python master_orchestrator_local.py
